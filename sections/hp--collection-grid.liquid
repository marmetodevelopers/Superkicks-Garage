{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .block_size--50{ flex: 0 0 50%; }
  .block_size--25{ flex: 0 0 25%; }
  .block_size--100{ flex: 0 0 100%; }
  
{%- endstyle -%}

<div class="hp__collection-block">
  <div class="page-width{% if section.settings.heading == blank %} no-heading{% endif %} section-{{ section.id }}-padding"> 
    <div class="collection__block-list">
      {%  for block in section.blocks %}
        <div class="collection__block">
          <a class="image_link media media--portrait " href="{{ block.settings.button_link }}">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="" />
          </a>  
          <h3>{{ block.settings.title }}</h3>  
          <p class="">{{ block.settings.paragraph }}</p>
          <a class="button" href="{{ block.settings.button_link }}">{{ block.settings.button }}</a> 
        </div>
      {% endfor %}  
    </div>
  </div>
</div>

{% schema %}
{
  "name": "HP Collection Block",
  "settings": [
    {
      "type": "richtext",
      "id": "section_title",
      "label": "Section Title"
    },
    {
      "type": "header",
      "content": "Sections Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Block",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Collection Title"
        },
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "Texts about collection description"
        },
        {
          "type": "text",
          "id": "button",
          "label": "Button",
          "default": "SHOP NOW"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Homepage Collection Block"
    }
  ]
}
{% endschema %}

